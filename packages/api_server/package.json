{
  "name": "@ping-pong/api_server",
  "description": "API Server",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production prisma generate && graphql-codegen && rollup -c",
    "dev": "concurrently npm:dev:* --kill-others",
    "dev:prisma": "prisma generate --watch",
    "dev:graphql-codegen": "graphql-codegen --watch",
    "dev:rollup": "NODE_ENV=development rollup -c --watch",
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write"
  },
  "dependencies": {
    "@apollo/server": "4.1.1",
    "@graphql-tools/merge": "8.3.12",
    "body-parser": "1.20.1",
    "cors": "2.8.5",
    "dataloader": "2.1.0",
    "express": "4.18.2",
    "graphql": "16.6.0",
    "graphql-scalars": "1.20.1",
    "graphql-subscriptions": "2.0.0",
    "graphql-ws": "5.11.2",
    "source-map-support": "0.5.21",
    "ws": "8.11.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.12",
    "@graphql-codegen/typescript": "2.8.2",
    "@graphql-codegen/typescript-resolvers": "2.7.7",
    "@ping-pong/generate_graphql_ast": "*",
    "@prisma/client": "4.6.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-run": "3.0.1",
    "@rollup/plugin-typescript": "9.0.2",
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@types/cors": "2.8.12",
    "@types/graphql": "14.5.0",
    "@types/ws": "8.5.3",
    "concurrently": "7.5.0",
    "prettier": "2.7.1",
    "prisma": "4.6.1",
    "rollup": "3.3.0",
    "tslib": "2.4.1",
    "typescript": "4.9.3"
  }
}
