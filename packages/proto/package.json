{
  "name": "@ping-pong/proto",
  "description": "Proto Files",
  "version": "1.0.0",
  "exports": {
    "./*": "./dist/*.ts"
  },
  "scripts": {
    "build": "rm -r dist; mkdir dist && protoc --ts_out dist --proto_path src src/*",
    "dev": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "proto",
      "quiet": false
    }
  },
  "devDependencies": {
    "@protobuf-ts/plugin": "2.8.1",
    "npm-watch": "0.11.0",
    "protoc": "1.1.3"
  }
}
