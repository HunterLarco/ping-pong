{
  "name": "ping-pong",
  "version": "1.0.0",
  "description": "Server + Web Frontend boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HunterLarco/ping-pong.git"
  },
  "scripts": {
    "initialize": "npm install && npm run clean && lerna bootstrap",
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist",
    "refresh": "lerna bootstrap",
    "dev": "lerna run dev --parallel --scope=@ping-pong/api_server --scope=@ping-pong/frontend",
    "api_server:build": "lerna run build --stream --scope=@ping-pong/api_server",
    "api_server:dev": "lerna run dev --stream --scope=@ping-pong/api_server",
    "frontend:build": "lerna run build --stream --scope=@ping-pong/frontend",
    "frontend:dev": "lerna run dev --stream --scope=@ping-pong/frontend",
    "proto:build": "lerna run build --stream --scope=@ping-pong/proto"
  },
  "author": "Hunter John Larco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HunterLarco/ping-pong/issues"
  },
  "homepage": "https://github.com/HunterLarco/ping-pong#readme",
  "devDependencies": {
    "lerna": "6.0.3"
  }
}
